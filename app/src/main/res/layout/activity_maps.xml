<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".activities.MapsActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <fragment
    android:id="@+id/map"
    android:name="com.google.android.gms.maps.SupportMapFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent" />

    <Button
        android:id="@+id/analyticsBtn"
        android:text="Analytics"
        android:layout_above="@id/optimize_switch"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="5dp"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_button_map"
        />

    <Switch
        android:id="@+id/optimize_switch"
        android:text="Optimize"
        android:textColor="#fff"
        android:textSize="22sp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </Switch>

    <Button
        android:id="@+id/change_map_type"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:text="Change Map Type"
        android:background="@drawable/rounded_button_map"/>

    <Button
        android:id="@+id/navigationBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp"
        android:layout_alignParentRight="true"
        android:text="Start Trip"
        android:textColor="@color/colorDark"
        android:textAllCaps="false"

        android:background="@drawable/rounded_button_white"/>

</RelativeLayout>